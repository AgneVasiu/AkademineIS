@model Grade
@{
    ViewData["Title"] = "Details of Subject grades";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Selected subject details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group text-center">
                    <img class="border-info rouded-circle" style="max-width: 100px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Grade1" class="control-label"></label>
                    <input asp-for="Grade1" class="form-control" readonly />
                    <span asp-validation-for="Grade1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade2" class="control-label"></label>
                    <input asp-for="Grade2" class="form-control" readonly />
                    <span asp-validation-for="Grade2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade3" class="control-label"></label>
                    <input asp-for="Grade3" class="form-control" readonly />
                    <span asp-validation-for="Grade3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade4" class="control-label"></label>
                    <input asp-for="Grade4" class="form-control" readonly />
                    <span asp-validation-for="Grade4" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade5" class="control-label"></label>
                    <input asp-for="Grade5" class="form-control" readonly />
                    <span asp-validation-for="Grade5" class="text-danger"></span>
                </div>
                <div class="align-midle">
                    <p class="text">
                        <b>Subject:</b>
                        <a asp-controller="Subjects" asp-action="Details" asp-route-id="@Model.SubjectId">
                            @Model.Subject.SubjectName
                        </a>
                    </p>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-ouline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>

    </div>
</div>