@model NewGradeVM

@{ 
    ViewData["Title"] = "Update grades for subjects";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update grades for subject </h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Grade1" class="control-label"></label>
                                <input asp-for="Grade1" class="form-control" />
                                <span asp-validation-for="Grade1" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Grade2" class="control-label"></label>
                                <input asp-for="Grade2" class="form-control" />
                                <span asp-validation-for="Grade2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Grade3" class="control-label"></label>
                                <input asp-for="Grade3" class="form-control" />
                                <span asp-validation-for="Grade3" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Grade4" class="control-label"></label>
                                <input asp-for="Grade4" class="form-control" />
                                <span asp-validation-for="Grade4" class="text-danger"></span>
                            </div><div class="form-group">
                                <label asp-for="Grade5" class="control-label"></label>
                                <input asp-for="Grade5" class="form-control" />
                                <span asp-validation-for="Grade5" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SubjectId" class="control-label"></label>
                                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" ></select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                         <input type="submit" value="Update" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>