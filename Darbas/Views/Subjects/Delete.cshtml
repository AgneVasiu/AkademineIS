@model Subject
@{
    ViewData["Title"] = "Delete subject";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete confirmation for @Model.SubjectName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="SubjectName" class="control-label"></label>
                        <input asp-for="SubjectName" class="form-control" readonly />
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Creditsnumber" class="control-label"></label>
                        <input asp-for="Creditsnumber" class="form-control" readonly/>
                        <span asp-validation-for="Creditsnumber" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-ouline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>

    </div>
</div>
