@model Subject
@{ 
    ViewData["Title"] = "Add new subject";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Add a New Subject</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SubjectName" class="control-label"></label>
                        <input asp-for="SubjectName" class="form-control" />
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Creditsnumber" class="control-label"></label>
                        <input asp-for="Creditsnumber" class="form-control" />
                        <span asp-validation-for="Creditsnumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-ouline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
